<html>
    <head><title>Books index</title></head>
    <body>
        <table id="books">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                </tr>
            </thead>
            <tbody>
            {% for book in books %}
                <tr>
                    <td>{{ book.title }}</td>
                    <td>{{ book.author }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </body>
</html>
